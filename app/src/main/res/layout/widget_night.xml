<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/widget_background"
    android:orientation="vertical"
    android:theme="@style/Theme.trackworktime.widget_night">

    <TextView
        android:id="@+id/workTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/workedWithDurationPreview"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?attr/widget_text"
        android:textColorLink="?attr/widget_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp">

        <Button
            android:id="@+id/clockIn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="?attr/widget_button_background"
            android:backgroundTint="?attr/widget_button_background"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/clockIn"
            android:textColor="?attr/widget_text"
            android:textColorLink="?attr/widget_text" />

        <Button
            android:id="@+id/clockOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="?attr/widget_button_background"
            android:backgroundTint="?attr/widget_button_background"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/clockOut"
            android:textColor="?attr/widget_text"
            android:textColorLink="?attr/widget_text" />

    </LinearLayout>


</LinearLayout>