<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.trackworktime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_green</item>
        <item name="colorPrimaryVariant">@color/medium_green</item>
        <item name="colorOnPrimary">@color/super_dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_green</item>
        <item name="colorSecondaryVariant">@color/medium_green</item>
        <item name="colorOnSecondary">@color/super_dark_green</item>
        <!-- Status bar color. -->
        <!-- "colorPrimaryVariant" is also manually set in Java as the color of the Actionbar! -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="oddRow">@color/dark_gray</item>
        <item name="highlightedRow">@color/dark_red</item>
        <item name="date_regular_work">@color/light_gray</item>
        <item name="date_regular_free">@color/neon_green</item>
        <item name="date_free">@color/light_blue</item>
        <item name="date_target_changed">@color/yellow</item>
    </style>

    <!-- adjust to theme of OS ("night" in this file): -->
    <style name="Theme.trackworktime.widget" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widget_background">@color/dark_gray</item>
        <item name="widget_button_background">@color/light_gray</item>
        <item name="widget_text">@color/medium_green</item>
    </style>
    <!-- day: -->
    <style name="Theme.trackworktime.widget_day" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widget_background">@color/light_gray</item>
        <item name="widget_button_background">@color/medium_gray</item>
        <item name="widget_text">@color/dark_green</item>
    </style>
    <!-- night: -->
    <style name="Theme.trackworktime.widget_night" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widget_background">@color/dark_gray</item>
        <item name="widget_button_background">@color/light_gray</item>
        <item name="widget_text">@color/medium_green</item>
    </style>
</resources>
